{
  "manifest_version": 2,

  "name": "Beacon Enhancement Suite (BES)",
  "description": "Provides multiple enhancements to the beacon website.",
  "version": "4.8",
  "icons": {
    "128": "128.png",
    "64":"64.png"
    },
  "permissions": [
    "tabs",
    "storage",
    "https://beacon.ses.nsw.gov.au/"
  ],
  "content_scripts": [
    {
      "matches": ["https://beacon.ses.nsw.gov.au/Jobs"],
      "js": ["BES-Jobs.js"]
      },
      {
      "matches": ["https://beacon.ses.nsw.gov.au/Jobs/*"],
      "exclude_matches": ["https://beacon.ses.nsw.gov.au/Jobs","https://beacon.ses.nsw.gov.au/Jobs/SituationalAwareness"], 
      "js": ["BES-JobView.js"]
      },
      {
      "matches": ["https://beacon.ses.nsw.gov.au/Account/Login*"],
      "js": ["BES-Account.js"]
      },
      {
      "matches": ["https://beacon.ses.nsw.gov.au/Jobs/SituationalAwareness"],
      "js": ["BES-SituationalAwareness.js"]
      },
      {
      "matches": ["https://beacon.ses.nsw.gov.au/Messages/Create"],
      "js": ["BES-MessagesCreate.js"]
      },
      {
      "matches": ["https://beacon.ses.nsw.gov.au/*"],
      "exclude_matches": ["https://beacon.ses.nsw.gov.au/Account/Login*"],
      "js": ["BES-Generic.js"]
      }
  ],
  "web_accessible_resources": ["*.html","BES-JobsContent.js","BES-SituationalAwarenessContent.js","BES-JobsViewContent.js","BES-MessagesCreateContent.js","bes.png","tv.png","stats.png"],
  "background": {
    "scripts": ["background.js"]
  }
}
