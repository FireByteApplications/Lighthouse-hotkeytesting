{
  "manifest_version": 2,

  "name": "Beacon Enhancement Suite (BES)",
  "description": "Provides multiple enhanements to the beacon website. accessed via the BES menu in beacon",
  "version": "3.0",
  "icons": {
    "128": "128.png",
    "64":"64.png"
    },
  "permissions": [
    "tabs",
    "storage",
    "https://beacon.ses.nsw.gov.au/"
  ],
  "content_scripts": [
    {
      "matches": ["https://beacon.ses.nsw.gov.au/Jobs"],
      "js": ["BES-Jobs.js"]
      },
      {
      "matches": ["https://beacon.ses.nsw.gov.au/Account/Login*"],
      "js": ["BES-Account.js"]
      },
      {
      "matches": ["https://beacon.ses.nsw.gov.au/*"],
      "exclude_matches": ["https://beacon.ses.nsw.gov.au/Account/Login*"],
      "js": ["BES-Generic.js"]
      }
  ],
  "web_accessible_resources": ["*.html","BES-JobsContent.js","bes.png"],
  "background": {
    "scripts": ["background.js"]
  }
}
